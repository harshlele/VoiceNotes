<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorOn</item>
        <item name="android:navigationBarColor">@color/colorOn</item>
    </style>
    
    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="AppTheme.Fullscreen.Recordings" parent="AppTheme.Fullscreen">
        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/colorOn</item>
        <item name="android:textColor">@color/colorOn</item>
        <item name="android:textCursorDrawable">@null</item>

    </style>

</resources>
